                      <Icons.Calendar width={12} height={12} color="#FFFFFF" />
                    </View>
                    <Text
                      style={{
                        fontSize: 11,
                        fontWeight: "600",
                        color: "#FFFFFF",
                      }}
                    >
                      {packageSummary.package?.duration || "5N/6D"}
