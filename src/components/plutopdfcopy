                    style={{
                      width: 24,
                      height: 24,
                      backgroundColor: "rgba(255, 255, 255, 0.2)",
                      borderRadius: 12,
                      alignItems: "center",
                      justifyContent: "center",
                    }}
                  >
                    <View style={{ width: 14, height: 14 }}>
