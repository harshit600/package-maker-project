                    }}
                  >
                    +91-8353056000
                  </Text>
                </View>
              </View>
            </View>

            {/* Main Header Content */}
            <View
              style={{
                flexDirection: "row",
                justifyContent: "space-between",
                alignItems: "flex-end",
              }}
            >
              {/* Left Section - Customer & Package Info */}
              <View style={{ flex: 0.65 }}>
